// a simple recursion to print the numbers up to n including n
let rec = fn (n: num) => num {
  print n;
  if n == 1 then return 1;
  return rec(n - 1);  
};

rec(5);

// fibonacci sequence
let fib = fn(n: num) => num {
  if n <= 1 then return n;
  return fib(n - 1) + fib(n - 2);
};

let i = 1;
while (i < 20) {
  print fib(i);
  i = i + 1;
}

// a recursive function returned by a function
let returnRec = fn () => (num) => num {
  let rec = fn (n: num) => num {
    print n;
    if n == 1 then return 1;
    return rec(n - 1);  
  };
  return rec;
};

returnRec()(5);
